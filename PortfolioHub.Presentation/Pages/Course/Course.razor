@page "/user-courses"
@using PortfolioHub.Presentation.Razor.Index.CourseComponents
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Мои курсы</PageTitle>
@if (!showCreateForm)
{
    <div class="container mt-4">
        <h2 class="mb-4">Мои курсы</h2>

        <div class="mb-3">
            <button class="btn btn-success" @onclick="ShowCreateForm">
                <i class="bi bi-plus-circle"></i> Добавить новый курс
            </button>
        </div>

        @if (courseDTOs == null)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Загрузка...</span>
                </div>
            </div>
        }
        else if (!courseDTOs.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                У вас пока нет добавленных курсов
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var course in courseDTOs)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">@course.Title</h5>
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-clock me-1"></i>@course.Hours ч
                                </span>
                            </div>

                            <div class="card-body">
                                <div class="mb-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-laptop me-2 text-secondary"></i>
                                        <span class="fw-bold">Платформа:</span>
                                        <span class="ms-2">@course.Platform</span>
                                    </div>

                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-calendar-date me-2 text-secondary"></i>
                                        <span class="fw-bold">Дата:</span>
                                        <span class="ms-2">@course.Date.ToString("dd.MM.yyyy")</span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(course.Certificate))
                                    {
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-award me-2 text-secondary"></i>
                                            <span class="fw-bold">Сертификат:</span>
                                            <span class="ms-2">@course.Certificate</span>
                                        </div>
                                    }
                                </div>

                                @if (!string.IsNullOrEmpty(course.Description))
                                {
                                    <div class="mb-3">
                                        <h6 class="fw-bold">Описание:</h6>
                                        <p class="card-text text-muted">@course.Description</p>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(course.Url))
                                {
                                    <div class="mb-3">
                                        <a href="@course.Url" target="_blank"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-link-45deg me-1"></i>Ссылка на курс
                                        </a>
                                    </div>
                                }

                                <div class="small text-muted mt-auto">
                                    <div>Изменено: @course.EditDate.ToString("dd.MM.yyyy HH:mm")</div>
                                    <div>Автор изменения: @course.EditBy</div>
                                </div>
                            </div>

                            <div class="card-footer bg-transparent border-top-0">
                                <div class="d-flex justify-content-end gap-2">
                                    <button @onclick="() => EditCourse(course.Id)"
                                            class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil me-1"></i>Редактировать
                                    </button>

                                    <button @onclick="() => DeleteCourse(course.Id)"
                                            class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash me-1"></i>Удалить
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

}
else
{
    <div class="card">
        <div class="card-header">
            <h5>Добавление нового курса</h5>
        </div>
        <div class="card-body">
            <CreateCourse 
                UserId="@userId"
                OnCourseCreated="@AddNewCourse"
                OnCancel="@HideCreateForm" />
        </div>
    </div>
}

@code {
    private Guid userId = Guid.Parse("49aa4dea-b974-44fd-3382-08de5c4e2a2f");
    private List<CourseDTO> courseDTOs;

    private bool showCreateForm = false;

    protected async override Task OnParametersSetAsync()
    {
        courseDTOs = await Http.GetFromJsonAsync<List<CourseDTO>>($"https://localhost:7264/api/Course/{userId}/in-user");
    }


    private void EditCourse(Guid courseId)
    {
        // TODO: Реализовать переход на страницу редактирования
        Navigation.NavigateTo($"/edit-course/{courseId}");
    }

    private async Task DeleteCourse(Guid courseId)
    {
        // TODO: Реализовать подтверждение удаления
        var confirmed = await JS.InvokeAsync<bool>("confirm",
            $"Вы уверены, что хотите удалить курс '{courseDTOs.FirstOrDefault(c => c.Id == courseId)?.Title}'?");

        if (confirmed)
        {
            // TODO: Реализовать удаление через API
            // await httpClient.DeleteAsync($"api/courses/{courseId}");
            var response = await Http.DeleteAsync($"https://localhost:7264/api/Course/{courseId}");
            if (response.IsSuccessStatusCode)
            {
                // Удаляем из локального списка
                courseDTOs.RemoveAll(c => c.Id == courseId);
                // Обновляем список
                StateHasChanged();

                // Показываем временное уведомление (если есть Toast-компонент)
                // ShowToast("Курс успешно удален", ToastType.Success);
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Ошибка: {error}");
            }

        }


    }
    private void ShowCreateForm()
    {
        showCreateForm = true;
    }

    private void HideCreateForm()
    {
        showCreateForm = false;
    }

    private async Task AddNewCourse(CourseDTO newCourse)
    {
        // Здесь добавьте логику сохранения курса (например, вызов API)
        try
        {
            // Пример сохранения:
            // await courseService.CreateCourseAsync(newCourse);
            var response = await Http.PostAsJsonAsync($"https://localhost:7264/api/Course", newCourse);
            if (response.IsSuccessStatusCode)
            {
                // Добавляем курс в локальный список
                courseDTOs.Add(newCourse);

            }

            // Закрываем форму
            showCreateForm = false;

            // Обновляем UI
            StateHasChanged();

            // Можно показать уведомление об успехе
            // await ShowNotification("Курс успешно добавлен", "success");
        }
        catch (Exception ex)
        {
            // Обработка ошибок
            // await ShowNotification($"Ошибка: {ex.Message}", "error");
        }
    }

}