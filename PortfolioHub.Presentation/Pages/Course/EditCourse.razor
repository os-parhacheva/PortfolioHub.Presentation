@page "/edit-course/{CourseId:guid}"
@using Microsoft.AspNetCore.Components.Forms
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Редактирование курса</PageTitle>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                </div>
            }
            else if (course == null)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Курс не найден
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" @onclick="GoBack">
                        <i class="bi bi-arrow-left me-1"></i>Вернуться к списку
                    </button>
                </div>
            }
            else
            {
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-pencil-square me-2"></i>
                            Редактирование курса
                        </h5>
                    </div>

                    <div class="card-body">
                        <EditForm Model="@course" OnValidSubmit="@HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            <!-- Скрытое поле для ID -->
                            <input type="hidden" @bind="course.Id" />

                            <div class="mb-3">
                                <label for="title" class="form-label fw-bold">Название курса *</label>
                                <input type="text" id="title" class="form-control"
                                       @bind="course.Title" @bind:event="oninput"
                                       placeholder="Введите название курса" />
                                <ValidationMessage For="@(() => course.Title)" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="platform" class="form-label fw-bold">Платформа *</label>
                                    <input type="text" id="platform" class="form-control"
                                           @bind="course.Platform" @bind:event="oninput"
                                           placeholder="Например: Udemy, Coursera" />
                                    <ValidationMessage For="@(() => course.Platform)" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="hours" class="form-label fw-bold">Количество часов *</label>
                                    <input type="number" id="hours" class="form-control"
                                           @bind="course.Hours"
                                           step="1"
                                           />
                                    <ValidationMessage For="@(() => course.Hours)" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="date" class="form-label fw-bold">Дата прохождения *</label>
                                    <input type="date" id="date" class="form-control"
                                           @bind="course.Date" />
                                    <ValidationMessage For="@(() => course.Date)" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="certificate" class="form-label fw-bold">Сертификат</label>
                                    <input type="text" id="certificate" class="form-control"
                                           @bind="course.Certificate" @bind:event="oninput"
                                           placeholder="Ссылка на сертификат" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label fw-bold">Описание</label>
                                <textarea id="description" class="form-control"
                                          @bind="course.Description" @bind:event="oninput"
                                          rows="4"
                                          placeholder="Добавьте описание курса"></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="url" class="form-label fw-bold">Ссылка на курс</label>
                                <input type="url" id="url" class="form-control"
                                       @bind="course.Url" @bind:event="oninput"
                                       placeholder="https://..." />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Информация о последнем изменении</label>
                                <div class="bg-light p-3 rounded">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <small class="text-muted d-block">
                                                <i class="bi bi-calendar-check me-1"></i>
                                                Дата изменения: @course.EditDate.ToString("dd.MM.yyyy HH:mm")
                                            </small>
                                        </div>
                                        <div class="col-sm-6">
                                            <small class="text-muted d-block">
                                                <i class="bi bi-person me-1"></i>
                                                Автор изменения: @course.EditBy
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-2 justify-content-end">
                                <button type="button" class="btn btn-secondary" @onclick="GoBack">
                                    <i class="bi bi-x-circle me-1"></i>Отмена
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-save me-1"></i>
                                    }
                                    Сохранить изменения
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid CourseId { get; set; }

    private Guid userId = Guid.Parse("49aa4dea-b974-44fd-3382-08de5c4e2a2f");
    private CourseDTO course = new();
    private bool isLoading = true;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadCourse();
    }

    private async Task LoadCourse()
    {
        try
        {
            isLoading = true;
            course = await Http.GetFromJsonAsync<CourseDTO>($"https://localhost:7264/api/Course/{CourseId}");

            if (course == null)
            {
                await JS.InvokeVoidAsync("alert", "Курс не найден");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Ошибка загрузки курса: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            isSubmitting = true;
            StateHasChanged();

            // Обновляем информацию об изменении
            course.EditDate = DateTime.Now;
            course.EditBy = "Текущий пользователь"; // Здесь можно подставить реальное имя пользователя

            var response = await Http.PutAsJsonAsync($"https://localhost:7264/api/Course/{CourseId}/update", course);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Курс успешно обновлен");
                GoBack();               
            }
            else
            {
                 var error = await response.Content.ReadAsStringAsync();
                 await JS.InvokeVoidAsync("alert", $"Ошибка при сохранении: {error}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/user-courses");  // Перенаправляем на страницу со списком курсов
    }
}
